<% include header %>
<% include nav %>

<main role="main">
	<div id="left">
		<div id="filter-pane">

			<div id="filter-title">
				FILTER SEARCH RESULTS BY:
			</div>

			<div id="filter-options" style="text-align:left;">
				<form>
				<input type="radio" name="filter" value="alumni">  alumni & patrons<br>
				<input type="radio" name="filter" value="netter staff">  netter staff<br>
				<input type="radio" name="filter" value="faculty">  faculty<br>
				<input type="radio" name="filter" value="students">  students<br>
				<input type="radio" name="filter" value="community">  community members<br>
				<input type="radio" name="filter" value="most-recent">  most recently updated<br>
				<input type="radio" name="filter" value="least-recent">  least recently updated<br>
				</form>
			</div>
		</div>

		<div id="legend-pane">
			<div id="legend-title">
				LEGEND:
			</div>
			<div id="legend-body" style="text-align:left;">
				<div class="littlebox">  alumni & patrons</div>
				<div class="littlebox">  netter staff</div>
				<div class="littlebox">  faculty</div>
				<div class="littlebox">  students</div>
				<div class="littlebox">  community members</div>
			</div>
		</div>
	</div>
	<div id="results-pane">

		<div id="results-header">
			____ search results for "____".
		</div>

		<div class="results"></div>

	</div>
</main>
<script>
	$(document).ready(function() {
  		var results = (<%-JSON.stringify(results)%>);
  		$.each( results, function( key, value ) {
  			var html = '<div class="single-result">' +
			'<div class="rect"></div>' +
			'<div class="circle"></div>' +
			'<div class="profile-body">' +
				'<span class="name">' + value.username + '</span>' +
				'<span class="updated"> last updated XX-XX-XXXX </span>' +
				'<span class="user-description">' + value.bio + '</span>' +
				'<span class="tags"> nette </span>' +
			'</div>' +
		'</div>'
		$(".circle").css('background-image', 'url(' + value.picture + ')');
  			$( ".results" ).append( html );
  			console.log(value);
			console.log(value.username);
		});
	});
</script>

